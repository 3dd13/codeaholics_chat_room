<h3 class="section-title">Sign up</h3>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div class="row">
	<%= f.label :email, :class => "span2" %>
	<%= f.email_field :email, :class => "span3" %>
</div>
<div class="row">
	<%= f.label :password, :class => "span2" %>
	<%= f.password_field :password, :class => "span3" %>
</div>
<div class="row">
	<%= f.label :password_confirmation, :class => "span2" %>
	<%= f.password_field :password_confirmation, :class => "span3" %>
</div>
<div>
	<%= f.submit "Sign up", :class => "btn btn-warning btn-large" %>
</div>
<% end %> 